<%= form_with(model: subscription) do |form| %>
  <% if subscription.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

      <ul>
        <% subscription.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :card_number, style: "display: block" %>
    <%= form.text_field :card_number, :required => true, :minlength => 16, :maxlength => 16, :placeholder => "16-digits" %>
  </div>

  <div>
    <%= form.label :card_expiry, style: "display: block" %>
    <%= form.date_field :card_expiry, :required => true %>
  </div>

  <div>
    <%= form.label :cvc, style: "display: block" %>
    <%= form.text_field :cvc, :required => true, :minlength => 3, :maxlength => 3, :placeholder => "3-digits" %>
  </div>

  <div>
    <%= form.hidden_field :user, value: current_user.id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
